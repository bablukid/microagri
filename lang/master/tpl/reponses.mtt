::use 'design.mtt'::
<div class="col-md-12">
	<div class="article">
        <h1>Réponses</h1>
        <p>
            <a href="?csv=1" class="btn btn-default">Export CSV</a>
        </p>
    
        
        <table class="table table-bordered table-condensed table-striped">
            <tr>
                <th>#</th>
                <th>complétion</th>
                ::foreach k keys::
                <th>::k::</th>
                ::end::
            </tr>
        ::foreach r reponses::
            <tr>
                <td>::r.id::</td>
                <td>::r.completion::%</td>
                ::foreach k keys::
                <td>::Reflect.field(r,k)::</td>
                ::end::
            </tr>
        ::end::

        </table>

	</div>
</div>

::end::
